{
  "name": "poncheo",
  "version": "1.0.0",
  "private": true,
  "description": "Employee time-tracking, shift management, and payroll calculation system",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "npm run dev -w packages/backend",
    "dev:frontend": "npm run dev -w packages/frontend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:backend": "npm run build -w packages/backend",
    "build:frontend": "npm run build -w packages/frontend",
    "build": "npm run build:backend && npm run build:frontend",
    "db:migrate": "npm run db:migrate -w packages/backend",
    "db:seed": "npm run db:seed -w packages/backend",
    "db:studio": "npm run db:studio -w packages/backend",
    "test": "npm run test -w packages/backend",
    "lint": "eslint \"packages/*/src/**/*.{ts,tsx}\""
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.0.0",
    "globals": "^15.15.0",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
